{
	"name": "quan-do-portfolio",
	"version": "3.0",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"build-preview": "vite build && vite preview --host",
		"build-and-publish": "vite build && wrangler pages publish --branch=main .svelte-kit/cloudflare --project-name \"quan-do-portfolio\"",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"generate-image-data": "node src/lib/scripts/generate-image-data.cjs",
		"optimize-image": "node src/lib/scripts/optimize-images.cjs"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.12.0",
		"@tailwindcss/line-clamp": "^0.4.2",
		"@types/lodash": "^4.14.191",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"prettier-plugin-tailwindcss": "^0.2.5",
		"sharp": "^0.31.3",
		"svelte": "^3.57.0",
		"svelte-check": "^3.1.4",
		"svelte-preprocess": "^5.0.3",
		"svelte-preprocess-import-assets": "^0.2.6",
		"tailwindcss": "^3.2.7",
		"tslib": "^2.5.0",
		"typescript": "^5.0.2",
		"vite": "^4.2.0",
		"vite-imagetools": "^4.0.18",
		"vitest": "^0.29.3"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-cloudflare": "^2.2.0",
		"lodash": "^4.17.21",
		"svelte-inview": "^4.0.0"
	}
}
