{
	"name": "quan-do-portfolio",
	"version": "3.0",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"build-preview": "vite build && vite preview --host",
		"build-and-publish": "vite build && wrangler pages deploy --branch=main .svelte-kit/cloudflare --project-name \"quan-do-portfolio\"",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"generate-image-data": "node src/lib/scripts/generate-image-data.cjs",
		"optimize-image": "node src/lib/scripts/optimize-images.cjs"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.20.4",
		"@tailwindcss/line-clamp": "^0.4.4",
		"@types/lodash": "^4.14.195",
		"@typescript-eslint/eslint-plugin": "^5.60.0",
		"@typescript-eslint/parser": "^5.60.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.43.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"sharp": "^0.32.1",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.4",
		"svelte-preprocess": "^5.0.4",
		"svelte-preprocess-import-assets": "^1.0.0",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3.9",
		"vite-imagetools": "^5.0.4",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-cloudflare": "^2.3.0",
		"lodash": "^4.17.21",
		"svelte-inview": "^4.0.0"
	}
}
