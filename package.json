{
	"name": "quan-do-portfolio",
	"version": "3.0",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"build-preview": "vite build && vite preview --host",
		"build-and-publish": "vite build && wrangler pages deploy --branch=main .svelte-kit/cloudflare --project-name \"quan-do-portfolio\"",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"generate-image-data": "node src/lib/scripts/generate-image-data.cjs",
		"optimize-image": "node src/lib/scripts/optimize-images.cjs"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.25.1",
		"@tailwindcss/line-clamp": "^0.4.4",
		"@types/lodash": "^4.14.199",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.31",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.5",
		"sharp": "^0.32.6",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"svelte-preprocess": "^5.0.4",
		"svelte-preprocess-import-assets": "^1.0.1",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.10",
		"vite-imagetools": "^5.0.8",
		"vitest": "^0.34.6"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-cloudflare": "^2.3.3",
		"lodash": "^4.17.21",
		"svelte-inview": "^4.0.1"
	}
}
